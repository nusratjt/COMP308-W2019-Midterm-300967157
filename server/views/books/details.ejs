<% include ../partials/header.ejs %>

<!-- MAIN CONTENT -->
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1><%= title %></h1>
      <form class="form" method="post">
        <!-- Book title input-->
        <div class="form-group">
          <label for="NameTextField">Title</label>
          <input type="text" class="form-control" id="NameTextField" placeholder="Book Name" name="title"
            value="<%= books.Title %>" required>
        </div>
        <!-- Book Description input-->
        <div class="form-group">
          <label for="DescTextField">Description</label>
          <input type="text" class="form-control" id="DescTextField" placeholder="Book Description" name="description"
            value="<%= books.Description %>" required>
        </div>
        <!-- Book Price input-->
        <div class="form-group">
          <label for="PriceTextField">Price</label>
          <input type="text" class="form-control" id="PriceTextField" placeholder="Book Price" name="price"
            value="<%= books.Price %>" required>
        </div>
        <!-- Book Author input-->
        <div class="form-group">
          <label for="AuthorTextField">Author</label>
          <input type="text" class="form-control" id="AuthorTextField" placeholder="Book Author" name="author"
            value="<%= books.Author %>" required>
        </div>
        <!-- Book Genre input-->
        <div class="form-group">
          <label for="GenreTextField">Genre</label>
          <input type="text" class="form-control" id="GenreTextField" placeholder="Book Genre" name="genre"
            value="<%= books.Genre %>" required>
        </div>

        <!-- Book info submition and cancel -->
        <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
        <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>